<div class="flex flex-col gap-2 justify-center items-center h-screen">
  <h1>Sovos Global Tax settings</h1>
  <%= form_with(url: embed_path, method: :patch, class: "max-w-sm mx-auto", authenticity_token: true) do |f| %>
    <%= f.hidden_field :company_droplet_uuid, value: 'cdr_znmpvbr5x7ndkotlhpvnyt5b5qfzvxzf' %>
    <div class="mb-5">
      <%= f.label :username, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :username, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
    </div>
    <div class="mb-5">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
    </div>
    <div class="mb-5">
      <%= f.label :hmac_key, "HMAC Key", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :hmac_key, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
    </div>
    <%= f.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  <% end %>
</div>